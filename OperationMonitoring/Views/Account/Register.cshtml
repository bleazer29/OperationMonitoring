@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<h1>User Registration</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label labelStyle" asp-for="Email">EMAIL</label>
                    <input asp-for="Email" class="form-control inputField" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label labelStyle" asp-for="Password">PASSWORD</label>
                    <input asp-for="Password " class="form-control inputField" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label labelStyle" asp-for="ConfirmPassword">CONFIRM PASSWORD</label>
                    <input asp-for="ConfirmPassword " class="form-control inputField" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" asp-controller="Account" asp-action="Register">REGISTER</button>
            </form>
        </div>
    </div>
</div>

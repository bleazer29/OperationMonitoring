@model LoginViewModel

@{
    ViewBag.Title = "User Login";
}


    <div class="container">
        <h1>User Login</h1>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label labelStyle" asp-for="Email">Email or Username</label>
                        <input asp-for="Email" class="form-control inputField" placeholder="Enter email or username..."/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label labelStyle" asp-for="Password">Password</label>
                        <input asp-for="Password" class="form-control inputField" placeholder="Enter password..." />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="checkBox-container" asp-for="RememberMe">
                            <input type="checkbox" asp-for="RememberMe">
                            Remember Me
                            <span class="checkmark"></span>
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                    <div>
                        <a asp-action="ForgotPassword">Forgot Password?</a>
                    </div>
                </form>
            </div>

        </div>
</div>


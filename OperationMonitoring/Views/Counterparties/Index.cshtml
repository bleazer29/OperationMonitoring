@model IEnumerable<OperationMonitoring.Models.Counterparty>
@{
    ViewData["Title"] = "Counterparties";
}
@{
    List<Agreement> CounterpartyContracts = new List<Agreement>();
    if (ViewBag.CounterpartyContracts != null)
        CounterpartyContracts = ViewBag.CounterpartyContracts;
    List<Well> CounterpartyWells = new List<Well>();
    if (ViewBag.CounterpartyWells != null)
        CounterpartyWells = ViewBag.CounterpartyWells;
}

<div class="content-heading">
    <h4>Counterparties</h4>
    <a class="btn btn-primary" asp-action="Create">Add New Counterparty</a>
</div>

<!-- SEARCH PANEL -->

    @using (Html.BeginForm())
    {
        <div class="search-label">
            <label class="control-label">Search by name:</label>
        </div>
        <div class="search-textbox" id="searchTB">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        </div>
        <button type="button" class="btn btn-primary" id="signal-search-btn">Search</button>
        <a asp-action="Index" class="btn btn-alter btn-refresh">

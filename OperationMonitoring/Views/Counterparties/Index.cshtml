        </a>
    }
</div>

<div class="pl-container">
    <div id="paged-list">
        <table class="table">
            <thead>
                <tr>
                    <th class="@(ViewBag.CurrentSort.ToString() == "id" ? "sort-asc" : @ViewBag.CurrentSort.ToString() == "id_desc" ? "sort-desc" : " ")">
                        @Html.ActionLink("Id", "Index", new { oldSortOrder = ViewBag.CurrentSort, newSortOrder = "id", currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th class="@(ViewBag.CurrentSort.ToString() == "name" ? "sort-asc" : @ViewBag.CurrentSort.ToString() == "name_desc" ? "sort-desc" : " ")">
                        @Html.ActionLink("Name", "Index", new { oldSortOrder = ViewBag.CurrentSort, newSortOrder = "name", currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        EDRPOU
                    </th>
                    <th>
                        Contracts
                    </th>
                    <th>
                        Wells
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="CPTablebody">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EDRPOU)
                        </td>
                        <td>
                            @{
                                int i = 0;
                                foreach (var _itemC in CounterpartyContracts)
                                {
                                    i++;
                                    if (_itemC.Counterparty.Id == item.Id)
                                    {
                                        <p>@_itemC.AgreementNumber</p>
                                    }
                                    if (i > 2)
                                    {
                                        <p>...</p>
                                        i = 0;
                                        break;
                                    }
                                }
                            }
                        </td>
                        <td>
                            @{
                                int j = 0;
                                foreach (var _itemW in CounterpartyWells)
                                {
                                    j++;
                                    if (_itemW.Counterparty.Id == item.Id)
                                    {
                                        <p>@_itemW.Title</p>
                                    }
                                    if (j > 2)
                                    {
                                        <p>...</p>
                                        j = 0;
                                        break;
                                    }
                                }
                            }
                        </td>
                        <td>
                            <a class="btn" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            @*<a class="btn" asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="history-navigation">
            <div class="simple-pagination-first"></div>
            <div class="simple-pagination-previous"></div>
            <div class="simple-pagination-page-numbers"></div>
            <div class="simple-pagination-next"></div>
            <div class="simple-pagination-last"></div>
        </div>
    </div>
</div>


<script>
    $.GenList = function () {
        $('#paged-list').simplePagination({
            items_per_page: 5,
            number_of_visible_page_numbers: 10,
            first_content: '<<',
            previous_content: '<',
            next_content: '>',
            last_content: '>>'
        });
    }

    $.GenList();

    const hubConnection = new signalR.HubConnectionBuilder()
        .withUrl("/data")
        .build();

    hubConnection.on("Receive", function (data) {

        document.getElementById("CPTablebody").innerHTML = "";
        var json = JSON.parse(data);
        for (let i = 0; i < json.length; i++) {
            document.getElementById("CPTablebody").innerHTML += "<tr>" +
                "<td>" + json[i].Id + "</td>"
                + "<td>" + json[i].Title + "</td>"
                + "<td>" + json[i].EDRPOU + "</td>"
                + "<td>" + "</td>" +
                "<td>" + "</td>" +
                "</tr>";
        }
        $.GenList();
    });

    var searchstring = "";
    document.getElementById("SearchString").addEventListener("change", function (e) {
        var inp = document.getElementById("SearchString");
        searchstring = inp.value;
    });

    document.getElementById("signal-search-btn").addEventListener("click", function (e) {
        const item = document.getElementById("searchTB");
        hubConnection.invoke("CounterpartySearch", searchstring);
    });

    hubConnection.start();
</script>


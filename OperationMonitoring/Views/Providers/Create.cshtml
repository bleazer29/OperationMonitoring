@model OperationMonitoring.Models.Provider
@{
    ViewData["Title"] = "Add New Provider";
}
<div class="content-heading">
    <h4>Add New Provider</h4>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
<div class="form-pos">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EDRPOU" class="control-label"></label>
            <input asp-for="EDRPOU" class="form-control" />
            <span asp-validation-for="EDRPOU" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

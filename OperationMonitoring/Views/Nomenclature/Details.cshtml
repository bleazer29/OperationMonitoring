@model OperationMonitoring.Models.Nomenclature

<div class="content-heading">
    <h4>
        Information about nomenclature -
        @Html.DisplayFor(model => model.Title)
    </h4>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

<!-- INFO -->
<div>
    <div class="form-pos form-info form-padding">
        <div class="form-info__heading">
            General information:
        </div>
        <div class="form-info__item">
            <div class="form-info__label">
                @Html.DisplayNameFor(model => model.Title)
            </div>
            <div class="form-info_data">
                @Html.DisplayFor(model => model.Title)
            </div>
        </div>
        <div class="form-info__item">
            <div class="form-info__label">
                @Html.DisplayNameFor(model => model.VendorCode)
            </div>
            <div class="form-info_data">
                @Html.DisplayFor(model => model.VendorCode)
            </div>
        </div>
    </div>
    <div class="form-pos form-info form-padding">
        <div class="form-info__heading">
            Specifications:
        </div>
        <div class="form-info__item">
            <div class="form-info__label">
                @Html.DisplayNameFor(model => model.Specification.Material)
            </div>
            <div class="form-info_data">
                @Html.DisplayFor(model => model.Specification.Material)
            </div>
        </div>
        <div class="form-info__item">
            <div class="form-info__label">
                @Html.DisplayNameFor(model => model.Specification.Height)
            </div>
            <div class="form-info_data">
                @Html.DisplayFor(model => model.Specification.Height)
            </div>
        </div>
        <div class="form-info__item">
            <div class="form-info__label">
                @Html.DisplayNameFor(model => model.Specification.Weight)
            </div>
            <div class="form-info_data">
                @Html.DisplayFor(model => model.Specification.Weight)
            </div>
        </div>
        <div class="form-info__item">
            <div class="form-info__label">
                @Html.DisplayNameFor(model => model.Specification.OperatingTime)
            </div>
            <div class="form-info_data">
                @Html.DisplayFor(model => model.Specification.OperatingTime)
            </div>
        </div>
    </div>
    <div class="form-pos form-info form-padding">
        <div class="form-info__heading">Provider:</div>
        <div class="form-info__item">
            <div class="form-info__label">General information</div>
            @if (Model.Provider != null)
            {
                <div class="form-info_data">
                    <a asp-controller="Providers" asp-action="Details" asp-route-id="@Model.Provider.Id">
                        @Model.Provider.Title,
                        <br /> @Model.Provider.Address,
                        <br /> @Model.Provider.EDRPOU
                    </a>
                </div>
            }
        </div>
    </div>
    <div class="btn btn-primary js-btn-edit">Edit information</div>
</div>


<!-- EDIT FORM -->
<div class="hidden">
    <form asp-controller="Nomenclature" asp-action="EditNomenclature" method="post" asp-route-nomenclatureId="@Model.Id">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-pos">
            <label class="form-info__label">General information:</label>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input name="editName" required value="@Model.Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorCode" class="control-label"></label>
                <input name="editVendorCode" required value="@Model.VendorCode" class="form-control" />
                <span asp-validation-for="VendorCode" class="text-danger"></span>
            </div>
        </div>
        @if (Model.Specification != null)
        {
            <div class="form-pos">
                <label class="form-info__label">Specification:</label>
                <div class="form-group">
                    <label asp-for="Specification.Material" class="control-label"></label>
                    <input name="editMaterial" required value="@Model.Specification.Material" class="form-control" />
                    <span asp-validation-for="Specification.Material" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Specification.Height" class="control-label"></label>
                    <input name="editHeight" required value="@Model.Specification.Height" class="form-control" />
                    <span asp-validation-for="Specification.Height" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Specification.Weight" class="control-label"></label>
                    <input name="editWeight" required value="@Model.Specification.Weight" class="form-control" />
                    <span asp-validation-for="Specification.Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Specification.OperatingTime" class="control-label"></label>
                    <input name="editOperatingTime" required value="@Model.Specification.OperatingTime" class="form-control" />
                    <span asp-validation-for="Specification.OperatingTime" class="text-danger"></span>
                </div>
            </div>
        }
        else
        {
            <div class="form-pos">
                <label class="form-info__label">Specification:</label>
                <div class="form-group">
                    <label asp-for="Specification.Material" class="control-label"></label>
                    <input name="editMaterial" required class="form-control" />
                    <span asp-validation-for="Specification.Material" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Specification.Height" class="control-label"></label>
                    <input name="editHeight" required class="form-control" />
                    <span asp-validation-for="Specification.Height" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Specification.Weight" class="control-label"></label>
                    <input name="editWeight" required class="form-control" />
                    <span asp-validation-for="Specification.Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Specification.OperatingTime" class="control-label"></label>
                    <input name="editOperatingTime" required class="form-control" />
                    <span asp-validation-for="Specification.OperatingTime" class="text-danger"></span>
                </div>
            </div>
        }

        <div class="form-pos">
            <label class="control-label">Provider:</label>
            <div class="form-group" name="provider-form">

                <div class="provider-form" name="provider-form-select">
                    <select name="provider" class="form-control">
                        <option value="-1">Add New Provider</option>
                        @{
                            if (ViewBag.Providers != null)
                            {
                                List<Provider> providers = ViewBag.Providers;
                                int i = 0;
                                while (i < providers.Count)
                                {
                                    <option value="@providers[i].Id">@providers[i].Title</option>
                                    i++;
                                }
                            }
                        }
                    </select>
                    <span class="text-danger hidden">Provider must be selected</span>
                </div>
                <div class="provider-form" name="provider-form-fields">
                    <div class="form-group">
                        <label asp-for="@Model.Provider.Title" class="control-label"></label>
                        <input name="providerName" class="form-control" />
                        <span asp-validation-for="@Model.Provider.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Provider.Address" class="control-label"></label>
                        <input name="providerAddress" class="form-control" />
                        <span asp-validation-for="@Model.Provider.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Provider.EDRPOU" class="control-label"></label>
                        <input name="providerEDRPOU" class="form-control" />
                        <span asp-validation-for="@Model.Provider.EDRPOU" class="text-danger"></span>
                    </div>

                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save changes" class="btn btn-primary" />
        </div>
    </form>
</div>


<script type="text/javascript">
    var provider = '@ViewBag.ProviderId';
    $("select[name='provider']").find('option[value="' + provider + '"]').prop("selected", true);

    if ($("select[name='provider']").children("option:selected").val() == "-1") {
        $(".provider-form[name='provider-form-fields']").fadeIn();
    }
    else {
        $(".provider-form[name='provider-form-fields']").hide();
    }

    $("select[name='provider']").change(function () {
        if ($(this).children("option:selected").val() == "-1") {
            $(".provider-form[name='provider-form-fields']").fadeIn();
        }
        else {
            $(".provider-form[name='provider-form-fields']").hide();
        }
    });
</script> 